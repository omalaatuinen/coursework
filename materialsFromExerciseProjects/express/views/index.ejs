<%- include("header"); -%>

    <div class="box" id="heading">

        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        
            <%if (items.length > 0){ %>
            <% items.forEach(v => { %>
            <div class="item">

                <input type="checkbox"><p><%= v %></p>
            </div>
            <% }); %>

            <%}%>

        <form class="item"  action="/" method="post">
                <input type="text" name="newItem" placeholder="Add new item" autocomplete="off" autofocus>
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
    
         
    </div>

    <%- include("footer"); -%>